<%- include("header") -%>
<body>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    <div class="box">
            <% for (let i = 0; i < newListItems.length; i++) { %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= newListItems[i]%></p>
                </div>
            <% } %>

            <form class="item" action="/" method="post">
                <input placeholder="Novo item" type="text" name="newItem" autocomplete="off">
                <button type="submit" name="list" value=<%= listTitle %></button>+</button>
             </form>
    </div>
<%- include("footer") -%>